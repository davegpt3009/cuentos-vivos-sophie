# Configuración del Servidor
PORT=3001

# API de Inteligencia Artificial para Texto
# Puedes usar OpenAI GPT-4, Google Gemini, o cualquier otra API compatible
OPENAI_API_KEY=tu_clave_de_openai_aqui
OPENAI_MODEL=gpt-4

# API de Inteligencia Artificial para Imágenes
# Generalmente se usa la misma clave de OpenAI para DALL-E
DALLE_API_KEY=tu_clave_de_dalle_aqui
DALLE_MODEL=dall-e-3

# Configuración de Text-to-Speech (opcional)
ENABLE_TTS=false
# Modelo y voz de OpenAI TTS
TTS_MODEL=tts-1
TTS_VOICE=alloy

# Configuración de la Aplicación
APP_NAME=Cuentos Vivos de Sophie
APP_VERSION=1.0.0

# Configuración de CORS (opcional)
# CORS_ORIGIN=http://localhost:5173

# Configuración de Logging (opcional)
LOG_LEVEL=info

# Configuración de Rate Limiting (opcional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Seguridad (opcional)
JWT_SECRET=tu_secreto_jwt_super_seguro_aqui

